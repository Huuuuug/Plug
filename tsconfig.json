{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ESNext",
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "jsx": "preserve",
    "strict": true,
  },
  "include": [
    "vite.config.ts",
    "example"
  ],
  "exclude": ["node_modules"]
}
